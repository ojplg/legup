
<h4>Report Cards</h4>

<table class="pure-table">
    <tr>
        <th>Report Card</th>
        <th>Calculate Scores</th>
        <th>Edit</th>
    </tr>

    #foreach ($report_card in $report_cards)
        <tr>
            <td>$report_card.Name</td>
            <td><a href="/app/view_report_card_scores?report_card_id=$report_card.Id">calculate</a></td>
            <td><a href="/app/view_report_card_form?report_card_id=$report_card.Id">edit</a></td>
        </tr>
    #end
</table>

<br/>

<a href="/app/view_report_card_form">New</a>