
<h4>Bill Index</h4>

<div>(Session $sessionNumber)</div>

#foreach ($chamber in [$house, $senate])

    <h4>$chamber.Name</h4>

    #if ( $chamber == $house )
        #set ( $bill_list = $house_bills )
    #else
        #set ( $bill_list = $senate_bills )
    #end

    <table class="pure-table pure-table-horizontal">

        <thead>
        <tr>
            <th>Type</th>
            <th>Number</th>
            <th>Short Description</th>
            <th>Votes</th>
            <th>Sponsors</th>
            <th>Load Data</th>
            <th>Table</th>
            <th>CSV</th>
         </tr>
        </thead>

        <tbody>
        #foreach ( $bill in $bill_list )
        <tr>
            <td>$bill.legislationSubType</td>
            <td>$bill.Number</td>
            <td>$bill.ShortDescription</td>
            <td><a href="/legup/view_bill_votes?bill_id=$bill.Id">Votes</a></td>
            <td><a href="/legup/view_bill_sponsors?bill_id=$bill.Id">Sponsors</a></td>
            <td><a href="/legup/view_bill_load_data?bill_id=$bill.Id">Load Data</a></td>
            <td><a href="/legup/view_bill_data_table?bill_id=$bill.Id">Table</a></td>
            <td><a href="/legup/view_bill_data_csv?bill_id=$bill.Id">CSV</a></td>
        </tr>
        #end
        </tbody>

    </table>

#end
